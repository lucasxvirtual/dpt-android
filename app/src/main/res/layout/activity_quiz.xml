<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.drogariadopovo.treinamento.presentation.activity.quiz.QuizViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/round_layout"
            android:elevation="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal"
            android:id="@+id/good_attendance_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="2.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/good_attendance"
                                android:textColor="@color/blue"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="19sp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="70%"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/attendance_percentage"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textSize="19sp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="10dp"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:layout_marginBottom="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/deadline"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/gray"
                                android:textSize="15sp"
                                android:fontFamily="@font/montserrat_regular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10/04/2019"
                                android:id="@+id/attendance_date"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/gray"
                                android:textSize="15sp"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/round_progress_layout">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="66dp"
                                android:background="@drawable/round_progress_layout"
                                android:backgroundTint="@color/blue"/>

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler"/>
        </LinearLayout>

    </LinearLayout>
</layout>